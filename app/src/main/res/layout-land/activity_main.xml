<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.popland.pop.constraintlayoutdemo.MainActivity">

    <ImageView
        android:layout_width="0dp"
        app:srcCompat="@drawable/freedom"
        android:id="@+id/themeImage"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />
    

    <TextView
        android:text="Location"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/themeImage"
        android:layout_marginLeft="16dp" />

    <EditText
        android:layout_width="0dp"
        android:inputType="textPersonName"
        android:text="Sai Gon"
        android:ems="10"
        android:id="@+id/editText"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="12dp"
        android:textSize="18sp"
        android:layout_height="50dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:text="30/1/2017"
        android:ems="10"
        android:id="@+id/editText2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintLeft_toLeftOf="@+id/editText"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintHorizontal_bias="0.0"
        android:textSize="18sp" />

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText2" />

    <EditText
        android:layout_width="0dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText3"
        android:text="In order to allow the user to enable the select text feature we are going to make it a menu option. So let's set up our menu in the main activity. Refer to the following link for more information on Menu's: http"
        android:gravity="top|center_vertical"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_bias="0.57"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        android:textSize="24sp" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:layout_marginTop="24dp" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        app:layout_constraintBaseline_toBaselineOf="@+id/button" />

    <android.support.constraint.Guideline
        android:layout_width="592dp"
        android:layout_height="0dp"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="183dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.63763064" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:id="@+id/imageView2"
        app:layout_constraintRight_toRightOf="@+id/themeImage"
        app:layout_constraintBottom_toBottomOf="@+id/themeImage" />


    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="287dp"
        android:id="@+id/guideline3"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="221dp"
        app:layout_constraintGuide_percent="0.3733108" />


</android.support.constraint.ConstraintLayout>
